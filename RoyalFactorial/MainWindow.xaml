<Window x:Class="RoyalFactorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoyalFactorial"
        xmlns:viewmodel="clr-namespace:RoyalFactorial.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="600"
        Background="{StaticResource BackgroundColor}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        >
    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Control Bar -->
            <RowDefinition Height="40"/>
            <!-- Application Content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Leaderboard Panel -->
            <ColumnDefinition Width="200"/>
            <!-- Main Content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border MouseDown="MainWindow_MouseDown"
                Grid.ColumnSpan="2"
                Background="{StaticResource BorderColor}" >
            <Grid HorizontalAlignment="Stretch">
                <Label Content="RoyalFactorial"
                       Foreground="{StaticResource WhiteColor}"
                       FontWeight="SemiBold"
                       Height="40"
                       Margin="8,0,0,0"
                       VerticalContentAlignment="Center"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Click="Minimize_Click"
                            Width="40"
                            Content="&#128469;"
                            BorderThickness="0"
                            Foreground="{StaticResource ForegroundColor}"
                            Background="Transparent"/>
                    <Button Click="Maximize_Click"
                            Width="40"
                            Content="&#128470;"
                            BorderThickness="0"
                            Foreground="{StaticResource ForegroundColor}"
                            Background="Transparent"/>
                    <Button Click="CloseWindow_Click"
                            Width="40"
                            Content="&#10060;"
                            BorderThickness="0"
                            Foreground="{StaticResource ForegroundColor}"
                            Background="Transparent"/>

                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              Background="{StaticResource SecondaryBackgroundColor}">
            <Grid.RowDefinitions>
                <!-- Leaderboard Title -->
                <RowDefinition Height="40"/>
                <!-- Leaderboard -->
                <RowDefinition Height="*" />
                <!-- Alert Section -->
                <RowDefinition Height="Auto"/>
                <!-- Control Button Section -->
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Leaderboard"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="{StaticResource TextAccentColor}"
                   Margin="8,0,0,0"/>

            <!-- Leaderboard -->
            <StackPanel Margin="4,0,4,0"
                        Grid.Row="1"
                        Background="Transparent">
                <Grid Margin="4,0,4,0"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Place"
                               FontWeight="Bold"
                               Padding="5"
                               Foreground="{StaticResource TextColor}" />
                    <TextBlock Text="Player"
                               Grid.Column="1"
                               FontWeight="Bold"
                               Padding="5"
                               Foreground="{StaticResource TextColor}" />
                    <TextBlock Text="Points"
                               Grid.Column="2"
                               FontWeight="Bold"
                               Padding="5"
                               TextAlignment="Right"
                               Foreground="{StaticResource TextColor}" />
                </Grid>

                <ListBox ItemTemplate="{StaticResource LeaderboardEntryTemplate}"
                     ItemsSource="{Binding Leaderboard.Players}"     
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     Grid.Row="1"
                     VerticalAlignment="Top"
                     BorderThickness="0"
                     Background="Transparent">
                </ListBox>
            </StackPanel>

            <!-- Alert -->
            <TextBlock Text="{Binding AlertMessage}"
                       Foreground="{StaticResource TextAccentColor}"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"
                       Margin="10,5"
                       Grid.Row="2"
                       TextWrapping="Wrap"/>

            <!-- Shuffle -->
            <Button Content="Shuffle And Deal" 
                    Command="{Binding ShuffleAndDealCommand}"
                    Grid.Row="3"
                    Margin="0,0,0,15"
                    Style="{StaticResource ButtonStyle}"/>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <!-- Main Content -->
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- Card Game Section -->
                <RowDefinition Height="*"/>
                <!-- Misc Controls Section -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          Padding="10"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="{StaticResource BackgroundColor}"
                          BorderBrush="{StaticResource BorderGrayColor}"
                          BorderThickness="1">
                <ItemsControl ItemsSource="{Binding Players}"
                              ItemTemplate="{StaticResource PlayerCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" MinWidth="200"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="MaxWidth" Value="700"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                </ItemsControl>
            </ScrollViewer>

            <Grid Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="Cards Per Player"
                           Grid.Row="0"
                           Grid.Column="0"
                           Foreground="{StaticResource TextColor}"
                           Margin="5,10,0,0"
                           TextWrapping="Wrap"
                           TextDecorations="Underline"/>

                <TextBox Text="{Binding CardsPerPlayer, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="1"
                         Grid.Column="0"
                         Background="{StaticResource InteractiveGrayBackgroundColor}"
                         BorderBrush="{StaticResource BorderGrayColor}"
                         BorderThickness="1"
                         Padding="5"
                         Margin="5"
                         TextAlignment="Left"
                         Foreground="{StaticResource TextColor}"
                         FontSize="14"
                         FontWeight="Medium"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         VerticalAlignment="Center"/>

                <TextBlock Text="Number Of Decks"
                           Grid.Row="0"
                           Grid.Column="1"
                           Margin="5,10,0,0"
                           TextWrapping="Wrap"
                           TextDecorations="Underline"
                           Foreground="{StaticResource TextColor}"/>

                <TextBox Text="{Binding NumberOfDecks, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="1"
                         Grid.Column="1"
                         Background="{StaticResource InteractiveGrayBackgroundColor}"
                         BorderBrush="{StaticResource BorderGrayColor}"
                         BorderThickness="1"
                         Padding="5"
                         Margin="5"
                         TextAlignment="Left"
                         Foreground="{StaticResource TextColor}"
                         FontSize="14"
                         FontWeight="Medium"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         VerticalAlignment="Center"/>

                <TextBlock Text="New Player Name"
                           Grid.Row="0"
                           Grid.Column="2"
                           Foreground="{StaticResource TextColor}"
                           Margin="5,10,0,0"
                           TextWrapping="Wrap"
                           TextDecorations="Underline"/>


                <TextBox Text="{Binding NewPlayerName, UpdateSourceTrigger=PropertyChanged}"
                         Background="{StaticResource InteractiveGrayBackgroundColor}"
                         BorderBrush="{StaticResource BorderGrayColor}"
                         BorderThickness="1"
                         Padding="5"
                         Margin="5,5,5,5"
                         TextAlignment="Left"
                         Foreground="{StaticResource TextColor}"
                         FontSize="14"
                         FontWeight="Medium"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Grid.Row="1"
                         Grid.Column="2"
                         VerticalAlignment="Center"/>
                <Button Content="Add"
                        Command="{Binding AddPlayerCommand}"
                        Width="Auto"
                        Grid.Row="1"
                        Grid.Column="3"
                        Height="30"
                        HorizontalAlignment="Left"
                        Margin="5"
                        Style="{StaticResource ButtonStyle}"/>

            </Grid>
        </Grid>

    </Grid>

</Window>
